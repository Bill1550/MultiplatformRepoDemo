<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textBodyLarge">
        <item name="android:textSize">18sp</item>  <!-- 18sp -->
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:letterSpacing">0.0</item>
<!--        <item name="android:fontFamily">@font/sans_serif_font_regular</item>-->
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ListItemSelectionText" parent="textBodyLarge">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/colorBackgroundFloating</item>
        <!--<item name="android:background">@color/very_light_gray</item>-->
    </style>
</resources>
